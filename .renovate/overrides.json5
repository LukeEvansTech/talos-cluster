{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  hostRules: [
    {
      // Allow Renovate to access Forgejo's OCI registry
      matchHost: "code.forgejo.org",
      hostType: "docker",
    },
  ],
  packageRules: [
    {
      description: "Disable Renovate for Forgejo Helm chart - registry doesn't support version lookups",
      matchDatasources: ["docker"],
      matchPackageNames: ["code.forgejo.org/forgejo-helm/forgejo"],
      enabled: false,
    },
    {
      description: "Custom versioning for it-tools date-based tags (no v prefix)",
      matchDatasources: ["docker"],
      matchPackageNames: ["ghcr.io/corentinth/it-tools"],
      versioning: "regex:^(?<major>\\d{4})\\.(?<minor>\\d{2})\\.(?<patch>\\d{2})-(?<build>[a-f0-9]+)$",
      extractVersion: "^v?(?<version>.*)$",
    },
    {
      description: "Override Helmfile Dependency Name",
      matchDatasources: ["docker"],
      matchManagers: ["helmfile"],
      overrideDepName: "{{packageName}}",
    },
    {
      description: "Override Talos Installer Package Name",
      matchDatasources: ["docker"],
      matchPackageNames: ["/factory\\.talos\\.dev/"],
      overridePackageName: "ghcr.io/siderolabs/installer",
    },
    {
      description: "Disable helm-values manager for homebridge (handled by custom regex manager with quotes)",
      matchDatasources: ["docker"],
      matchManagers: ["helm-values"],
      matchPackageNames: ["homebridge/homebridge"],
      enabled: false,
    },
  ],
}
